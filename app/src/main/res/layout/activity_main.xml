<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="267dp"
    android:background="#000080"
    >
</ImageView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="177dp"
            android:layout_height="100dp"
            android:src="@drawable/snepat"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMPN 4 KOTA TEGAL"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="40dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUT WURI HANDAYANI"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:onClick="profil"
                android:id="@+id/profil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:src="@drawable/exchange"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:id="@+id/prestasi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="prestasi"
                android:layout_marginTop="40dp"
                android:src="@drawable/achievement"
                android:background="@color/white">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prestasi"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:id="@+id/search"
                android:layout_width="100dp"
                android:onClick="hubungi"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/fasilitas"
                android:background="@color/white">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FASILITAS"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/lokasi"
                android:layout_width="100dp"
                android:onClick="lokasi"
                android:layout_height="100dp"
                android:background="@color/white"
                android:src="@drawable/maps"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:id="@+id/eskul"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="ekstrakulikuler"
                android:layout_marginTop="40dp"
                android:src="@drawable/training"
                android:background="@color/white">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ekstrakulikuler"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

            <ImageView
                android:id="@+id/unduh"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="download"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:src="@drawable/folder"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
