                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="5sp"
                    android:text="SABTU PUKUL 15.00-17.OO"
                    android:textColor="#000"
                    android:textSize="9sp" />


